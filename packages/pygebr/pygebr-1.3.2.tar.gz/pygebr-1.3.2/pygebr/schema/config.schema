{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gitlab.com/Biloti/pygebr/-/raw/main/pygebr/schema/config.schema",
  "title": "Config",
  "description": "PyGÃªBR local configuration",
  "type": "object",
  "properties": {
    "authors": {
      "description": "default authors for a new flows",
      "type": "array",
      "items": {
        "$ref": "/Biloti/pygebr/-/raw/main/pygebr/schema/person.schema"
      }
    },
    "path": {
      "type": "object",
      "description": "default paths",
