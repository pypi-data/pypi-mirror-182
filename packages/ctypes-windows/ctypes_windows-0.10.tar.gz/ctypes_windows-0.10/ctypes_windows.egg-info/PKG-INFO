window_SHOW(hwnd: int)

window_SHOWDEFAULT(hwnd: int)

window_SHOWMINIMIZED(hwnd: int)

window_SHOWMINNOACTIVE(hwnd: int)

window_SHOWNA(hwnd: int)

window_SHOWNOACTIVATE(hwnd: int)

