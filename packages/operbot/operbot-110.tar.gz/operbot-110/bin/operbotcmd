#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0114,C0115,C0116,C0413,R0801


"write your own commands"


import sys


from opr import Cfg, Handler, Wd, command, parse, scan
from operbot import cmds, irc, rss


Cfg.name = "operbot"
Wd.workdir = "/var/lib/operbot/"


scan(cmds)
scan(irc)
scan(rss)


class CLI(Handler):

    @staticmethod
    def raw(txt):
        print(txt)
        sys.stdout.flush()

def main():
    parse(' '.join(sys.argv[1:]))
    cli = CLI()
    command(cli, Cfg.prs.otxt)


main()
