{
  "version": "0.2.0",
  "configurations": [
    // * -------------------------------------------------------------------------- * //
    // * PROJECT-SPECIFIC * //
    {
      "name": "CLI: Generate report",
      "cwd": "${workspaceFolder}",
      "type": "python",
      "request": "launch",
      "module": "mindful",
      "args": ["generate-report"],
      "console": "internalConsole"
    },
    {
      "name": "CLI: Get comments",
      "cwd": "${workspaceFolder}",
      "type": "python",
      "request": "launch",
      "module": "mindful",
      "args": [
        "get-comments",
        "Process data",
        "Maintain the data process",
        "--limit-days=7"
      ],
      "console": "internalConsole"
    },
    // * -------------------------------------------------------------------------- * //
    // * GENERAL * //
    {
      "name": "Python: Current file",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole"
    },
    {
      "name": "Python: Current file: Not just my code",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "justMyCode": false,
      "console": "internalConsole"
    }
  ]
}
